@model Comercio.Models.VendedorFornecedorViewModel

@{
    ViewData["Title"] = "fornecedor/editar-vendedor";
}

<h2>ALTERAR INFORMAÇÕES DO VENDEDOR</h2>
<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="editar-vendedor" asp-route-vendedor_id="@Model.Vendedor_id" asp-route-fornecedor_id="@Model.Fornecedor_id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" />
            <div class="form-group">
                <label><strong>NOME</strong></label>
                <input asp-for="Nome" class="form-control" />
                <span><strong asp-validation-for="Nome" class="text-danger"></strong></span>
            </div>
            <div class="form-group">
                <label><strong>E-MAIL</strong></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label><strong>DDD</strong></label>
                <input asp-for="Ddd" class="form-control" />
                <span><strong asp-validation-for="Ddd" class="text-danger"></strong></span>
            </div>
            <div class="form-group">
                <label><strong>NÚMERO</strong></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label><strong>DDD ADICIONAL</strong></label>
                <input asp-for="DddAdicional" class="form-control" />
                <span><strong asp-validation-for="DddAdicional" class="text-danger"></strong></span>
            </div>
            <div class="form-group">
                <label><strong>NÚMERO ADICIONAL</strong></label>
                <input asp-for="NumeroAdicional" class="form-control" />
                <span asp-validation-for="NumeroAdicional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SALVAR" class="btn btn-success " />
                <!-- Botão para modal ExcluirVendedor-->
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalExcluirVendedor">EXCLUIR</button>
            </div>
        </form>
    </div>
</div>
<hr />

<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>

<!-- Modal ExcluirVendedor-->
<div class="modal fade" id="modalExcluirVendedor" tabindex="-1" role="dialog" aria-labelledby="ExcluirVendedorLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ExcluirVendedorLabel">EXCLUIR VENDEDOR</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                TEM CERTEZA QUE DESEJA EXCLUIR O VENDEDOR ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                <a asp-controller="Fornecedor" asp-action="excluir-vendedor" asp-route-fornecedor_id=@Model.Fornecedor_id asp-route-vendedor_id=@Model.Vendedor_id class="btn btn-danger btn-sm">EXCLUIR</a>
            </div>
        </div>
    </div>
</div>

