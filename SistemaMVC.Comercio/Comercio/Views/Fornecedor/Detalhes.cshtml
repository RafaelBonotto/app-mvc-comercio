@model Comercio.Models.FornecedorViewModel
@{
    ViewData["Title"] = "fornecedor/detalhes";
}

<h1>@Model.Nome_empresa </h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome_empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome_empresa)
        </dd>
    </dl>
</div>

<hr />
<div>
    <h4>ENDEREÇOS</h4>
    <!-- Exibir lista de endereços-->
    <table class="table">
        <thead>
            <tr>
                <th>
                    LOGRADOURO
                </th>
                <th>
                    NÚMERO
                </th>
                <th>
                    COMPLEMENTO
                </th>
                <th>
                    CEP
                </th>
                <th>
                    BAIRRO
                </th>
                <th>
                    CIDADE
                </th>
                <th>
                    ESTADO
                </th>
                <th>
                    UF
                </th>
                <th>
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalInserirEndereco" data-whatever="mdo">NOVO</button>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Endereco)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Logradouro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Complemento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UF)
                </td>
                <td>
                    <a asp-controller="Fornecedor" asp-action="atualizar-endereco" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDITAR</a>
                    <a asp-controller="Fornecedor" asp-action="excluir-endereco" asp-route-id="@item.Id" class="btn btn-danger btn-sm">EXCLUIR</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <div>
        <!-- Modal Adicionar novo endereço ao fornecedor-->
        <div class="modal fade" id="modalInserirEndereco" tabindex="-1" role="dialog" aria-labelledby="modalInserirEnderecoLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalInserirEnderecoLabel">ADICIONE AQUI UM NOVO ENDEREÇO PARA ESSE FORNECEDOR:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="Fornecedor" asp-action="adicionar-endereco" asp-route-fornecedorId="@Model.Id">
                            <h6>LOGRADOURO: <input type="text" name="logradouro" /></h6>
                            <h6>NÚMERO: <input type="text" name="numero" /></h6>
                            <h6>COMPLEMENTO: <input type="text" name="complemento" /></h6>
                            <h6>CEP: <input type="text" name="cep" /></h6>
                            <h6>BAIRRO: <input type="text" name="bairro" /></h6>
                            <h6>CIDADE: <input type="text" name="cidade" /></h6>
                            <h6>ESTADO: <input type="text" name="estado" /></h6>
                            <h6>UF: <input type="text" name="uf" /></h6>
                            <h6>TIPO DE ENDEREÇO: <select name="tipoEndereco" asp-items="@Model.TipoEndereco" class="align-items-md-center"></select></h6>
                            <input type="submit" value="ADICIONAR" class="btn-danger" />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div>
    <h4>TELEFONES</h4>
    <!-- Exibir lista de telefones-->
    <table class="table">
        <thead>
            <tr>
                <th>
                    NÚMERO
                </th>
                <th>
                    TIPO
                </th>
                <th>
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalInserirTelefone" data-whatever="mdo">NOVO</button>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Telefone)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ddd)
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo_telefone)
                    </td>
                    <td>
                        <a asp-controller="Fornecedor" asp-action="atualizar-telefone" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDITAR</a>
                        <a asp-controller="Fornecedor" asp-action="excluir-telefone" asp-route-id="@item.Id" class="btn btn-danger btn-sm">EXCLUIR</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <!-- Modal Adicionar novo telefone ao fornecedor-->
        <div class="modal fade" id="modalInserirTelefone" tabindex="-1" role="dialog" aria-labelledby="modalInserirTelefoneLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalInserirTelefoneLabel">ADICIONE AQUI UM NOVO TELEFONE PARA ESSE FORNECEDOR:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="Fornecedor" asp-action="adicionar-telefone" asp-route-fornecedorId="@Model.Id">
                            <h6>DDD: <input type="text" name="ddd" /></h6>
                            <h6>NÚMERO: <input type="text" name="numero" /></h6>
                            <h6>TIPO DE TELEFONE: <select name="tipoTelefone" asp-items="@Model.TipoTelefone" class="align-items-md-center"></select></h6>

                            @*<h6>TIPO DE TELEFONE: <input type="text" name="tipoTelefone" /></h6>*@
                            <input type="submit" value="ADICIONAR" class="btn-danger" />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div>
    <h4>VENDEDORES</h4>
    <!-- Exibir lista de vendedores-->
    <table class="table">
        <thead>
            <tr>
                <th>
                    NOME
                </th>
                <th>
                    TELEFONE
                </th>
                <th>
                    TIPO TELEFONE
                </th>
                <th>
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalInserirVendedor" data-whatever="mdo">NOVO</button>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vendedor)
            {
                <tr>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Ddd)
                        @Html.DisplayFor(modelItem => item.Numero)*@
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Tipo_telefone)*@
                    </td>
                    <td>
                        <a asp-controller="Fornecedor" asp-action="atualizar-vendedor" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDITAR</a>
                        <a asp-controller="Fornecedor" asp-action="excluir-vendedor" asp-route-id="@item.Id" class="btn btn-danger btn-sm">EXCLUIR</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <!-- Modal Adicionar novo vendedor ao fornecedor-->
        <div class="modal fade" id="modalInserirVendedor" tabindex="-1" role="dialog" aria-labelledby="modalInserirVendedorLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalInserirVendedorLabel">ADICIONE AQUI UM NOVO VENDEDOR PARA ESSE FORNECEDOR:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="Fornecedor" asp-action="adicionar-vendedor" asp-route-fornecedorId="@Model.Id">
                            <h6>NOME: <input type="text" name="ddd" /></h6>
                            TELEFONE
                            <h6>DDD: <input type="text" name="TelefoneDdd" /></h6>
                            <h6>NUMERO: <input type="text" name="telefoneNumero" /></h6>
                            TELEFONE ADICIONAL
                            <h6>DDD: <input type="text" name="TelefoneDdd" /></h6>
                            <h6>NUMERO: <input type="text" name="telefoneNumero" /></h6>
                            <input type="submit" value="ADICIONAR" class="btn-danger" />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div>
    <a asp-action="editar" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
    <!-- Botão para acionar modal Excluir-->
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalExcluir">
        Excluir
    </button>
</div>

<hr />

<!-- Modal Excluir-->
<div class="modal fade" id="modalExcluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">EXCLUIR PRODUTO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir esse produto ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a asp-controller="Produto" asp-action="excluir" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
            </div>
        </div>
    </div>
</div>

<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>



