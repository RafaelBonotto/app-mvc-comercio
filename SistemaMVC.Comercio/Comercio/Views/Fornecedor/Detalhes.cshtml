@model Comercio.Models.FornecedorViewModel
@{
    ViewData["Title"] = "fornecedor/detalhes";
}

<h1>@Model.Nome_empresa </h1>

<h2>DETALHES</h2>

<hr />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome_empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome_empresa)
        </dd>
    </dl>
</div>

<hr />
<div>
    <h4>ENDEREÇOS</h4>
    <!-- Exibir lista de endereços-->
    <a asp-controller="Fornecedor" asp-action="adicionarEndereco" asp-route-fornecedorId="@Model.Id" class="btn btn-info btn-lg">NOVO ENDEREÇO</a>
</div>

<hr />

<div>
    <h4>TELEFONES</h4>
    <!-- Exibir lista de telefones-->
    <a asp-controller="Fornecedor" asp-action="adicionarTelefone" asp-route-fornecedorId="@Model.Id" class="btn btn-info btn-lg">NOVO TELEFONE</a>
</div>

<hr />

<div>
    <h4>VENDEDORES</h4>
    <!-- Exibir lista de vendedores-->
    <a asp-controller="Fornecedor" asp-action="adicionarVendedor" asp-route-fornecedorId="@Model.Id" class="btn btn-info btn-lg">NOVO VENDEDOR</a>
</div>

<hr />

<div>
    <a asp-action="editar" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
    <!-- Botão para acionar modal Excluir-->
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalExcluir">
        Excluir
    </button>
</div>

<hr />

<!-- Modal Excluir-->
<div class="modal fade" id="modalExcluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">EXCLUIR PRODUTO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir esse produto ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a asp-controller="Produto" asp-action="excluir" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
            </div>
        </div>
    </div>
</div>

<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>



