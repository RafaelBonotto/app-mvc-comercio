@model Comercio.Models.FornecedorViewModel
@{
    ViewData["Title"] = "fornecedor/detalhes";
}

<h1>@Model.Nome_empresa </h1>

<h2>DETALHES</h2>

<hr />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome_empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome_empresa)
        </dd>
    </dl>
</div>

<hr />
<div>
    <h4>ENDEREÇOS</h4>
    <!-- Exibir lista de endereços-->
    <div>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#modalInserirEndereco" data-whatever="mdo">NOVO</button>
        <!-- Modal Adicionar novo endereço ao fornecedor-->
        <div class="modal fade" id="modalInserirEndereco" tabindex="-1" role="dialog" aria-labelledby="modalInserirEnderecoLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalInserirEnderecoLabel">ADICIONE AQUI UM NOVO ENDEREÇO PARA ESSE FORNECEDOR:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="Fornecedor" asp-action="adicionar-endereco" asp-route-fornecedorId="@Model.Id">
                            <h6>LOGRADOURO: <input type="text" name="logradouro" /></h6>
                            <h6>NÚMERO: <input type="text" name="numero" /></h6>
                            <h6>COMPLEMENTO: <input type="text" name="complemento" /></h6>
                            <h6>CEP: <input type="text" name="cep" /></h6>
                            <h6>BAIRRO: <input type="text" name="bairro" /></h6>
                            <h6>CIDADE: <input type="text" name="cidade" /></h6>
                            <h6>ESTADO: <input type="text" name="estado" /></h6>
                            <h6>UF: <input type="text" name="uf" /></h6>
                            <h6>TIPO DE ENDEREÇO: <input type="text" name="tipoEndereco" /></h6>
                            <input type="submit" value="ADICIONAR" class="btn-danger" />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div>
    <h4>TELEFONES</h4>
    <!-- Exibir lista de telefones-->
    <div>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#modalInserirTelefone" data-whatever="mdo">NOVO</button>
        <!-- Modal Adicionar novo telefone ao fornecedor-->
        <div class="modal fade" id="modalInserirTelefone" tabindex="-1" role="dialog" aria-labelledby="modalInserirTelefoneLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalInserirTelefoneLabel">ADICIONE AQUI UM NOVO TELEFONE PARA ESSE FORNECEDOR:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="Fornecedor" asp-action="adicionar-telefone" asp-route-fornecedorId="@Model.Id">
                            <h6>DDD: <input type="text" name="ddd" /></h6>
                            <h6>NÚMERO: <input type="text" name="numero" /></h6>
                            <h6>TIPO DE TELEFONE: <input type="text" name="tipoTelefone" /></h6>
                            <input type="submit" value="ADICIONAR" class="btn-danger" />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div>
    <h4>VENDEDORES</h4>
    <!-- Exibir lista de vendedores-->
    <div>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#modalInserirVendedor" data-whatever="mdo">NOVO</button>
        <!-- Modal Adicionar novo vendedor ao fornecedor-->
        <div class="modal fade" id="modalInserirVendedor" tabindex="-1" role="dialog" aria-labelledby="modalInserirVendedorLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalInserirVendedorLabel">ADICIONE AQUI UM NOVO VENDEDOR PARA ESSE FORNECEDOR:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="Fornecedor" asp-action="adicionar-vendedor" asp-route-fornecedorId="@Model.Id">
                            <h6>NOME: <input type="text" name="ddd" /></h6>
                            <h6>TELEFONE</h6>
                            <h6>DDD: <input type="text" name="TelefoneDdd" /></h6>
                            <h6>NUMERO: <input type="text" name="telefoneNumero" /></h6>
                            <h6>TELEFONE ADICIONAL</h6>
                            <h6>DDD: <input type="text" name="TelefoneDdd" /></h6>
                            <h6>NUMERO: <input type="text" name="telefoneNumero" /></h6>
                            <input type="submit" value="ADICIONAR" class="btn-danger" />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div>
    <a asp-action="editar" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
    <!-- Botão para acionar modal Excluir-->
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalExcluir">
        Excluir
    </button>
</div>

<hr />

<!-- Modal Excluir-->
<div class="modal fade" id="modalExcluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">EXCLUIR PRODUTO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir esse produto ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a asp-controller="Produto" asp-action="excluir" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
            </div>
        </div>
    </div>
</div>

<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>



