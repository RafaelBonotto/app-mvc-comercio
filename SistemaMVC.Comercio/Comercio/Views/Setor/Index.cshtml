@model IEnumerable<Comercio.Models.SetorViewModel>
@{
    ViewData["Title"] = "Setor/index";
}

<h4 class="display-4">SETORES</h4>

<table class="table">

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h5> @Html.DisplayFor(modelItem => item.Descricao)</h5>
                </td>
                <td>
                    <!-- Botão modal EDITAR-->
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">EDITAR</button> 
                    
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">TEM CERTEZA QUE DESEJA ALTERAR O NOME DO SETOR ?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form asp-controller="Setor" asp-action="editar" asp-route-id="@item.Id">
                                        <h6>NOVO NOME: <input class="alert-info" type="text" name="descricao" /></h6>
                                        <input type="submit" value="SALVAR" class="btn-danger" />
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </td>
                <td>
                    <!-- Botão  modal EXCLUIR-->
                    <button asp-controller="Setor" asp-action="excluir" asp-route-id="@item.Id"  type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalExcluir">EXCLUIR</button>
                    <!-- Modal Excluir-->
                    <div class="modal fade" id="modalExcluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">EXCLUIR SETOR</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <h6>TEM CERTEZA QUE DESEJA EXCLUIR ESSE SETOR ? OS PRODUTOS QUE PERTENCEM A ELE FICARÃO SEM SETOR.</h6>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">CANCELAR</button>
                                    <button type="submit" class="btn btn-danger" data-dismiss="modal">EXCLUIR</button>
                                    @*<a asp-controller="Setor" asp-action="excluir" asp-route-id="@item.Id" class="btn btn-danger">EXCLUIR</a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />


<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>