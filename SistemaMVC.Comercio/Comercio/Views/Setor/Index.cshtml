@model IEnumerable<Comercio.Models.SetorViewModel>
@{
    ViewData["Title"] = "Setor/index";
}

<h4 class="display-4">SETORES</h4>

<table class="table">
    <tbody>
        <tr>
            <td>
                <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#criarNovoSetor" data-whatever="mdo"><strong>NOVO</strong></button>
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h5> @Html.DisplayFor(modelItem => item.Descricao)</h5>
                </td>
                <td>
                    <a asp-controller="Setor" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-success"> EDITAR</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<!-- Modal: Criar novo Setor-->
<div class="modal fade" id="criarNovoSetor" tabindex="-1" role="dialog" aria-labelledby="criarNovoSetorLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="criarNovoSetorLabel">CRIAR NOVO SETOR:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Setor" asp-action="inserir">
                    <h6>NOME DO SETOR: <input type="text" name="descricao" /></h6>
                    <input type="submit" value="SALVAR" class="btn-danger" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>