@model IEnumerable<Comercio.Models.SetorViewModel>
@{
    ViewData["Title"] = "Setor/index";
}

<h4 class="display-4">SETORES</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a asp-controller="Setor" asp-action="editar" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDITAR</a>
                </td>
                <td>
                    <a asp-controller="Setor" asp-action="excluir" asp-route-id="@item.Id" class="btn-danger btn-sm">EXCLUIR</a>
                </td>
            </tr>
         }
    </tbody>
</table>
<hr />
<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>