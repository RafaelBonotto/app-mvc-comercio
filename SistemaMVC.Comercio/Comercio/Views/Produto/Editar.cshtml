@model Comercio.Models.Produto

@{
    ViewData["Title"] = "Produtos/editar";
}

<h4 class="display-4">EDITAR</h4>
<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="atualizar" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label><strong>CÓDIGO</strong></label>
                <input asp-for="Codigo" class="form-control" />
                <span><strong asp-validation-for="Codigo" class="text-danger"></strong></span>
            </div>
            <div class="form-group">
                <label><strong>DESCRIÇÃO</strong></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label><strong>CUSTO</strong></label>
                <input asp-for="Preco_custo" class="form-control" />
                <span asp-validation-for="Preco_custo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label><strong>VENDA</strong></label>
                <input asp-for="Preco_venda" class="form-control" />
                <span asp-validation-for="Preco_venda" class="alert-danger"></span>
            </div>
            <div class="form-group">
                    <label><strong>SETOR</strong></label>
                    <select name="Setor_id" class="form-control">
                        @*<option selected>@Model.Setor.Descricao</option>*@
                        <option selected typeof="Number" value=2>ALIMENTOS</option>
                        <option typeof="Number" value=3>ELETRÔNICOS</option>
                        <option typeof="Number" value=4>UTILIDADES</option>
                        <option typeof="Number" value=5>FERRAMENTAS</option>
                        <option typeof="Number" value=6>BRINQUEDOS</option>
                        <option typeof="Number" value=7>PRESENTES</option>
                        <option typeof="Number" value=8>PERFUMARIA</option>
                    </select>
            </div>

            <div class="form-group">
                <input type="submit" value="SALVAR" class="btn btn-success " />
            </div>

        </form>
    </div>
</div>

<hr />

<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


