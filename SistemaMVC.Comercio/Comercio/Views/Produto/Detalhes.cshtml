@model Comercio.Models.ProdutoViewModel
@{
    ViewData["Title"] = "Produto/detalhes";
}

<h1>@Model.Descricao </h1>

<h2>Detalhes</h2>

<hr />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SetorDescricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SetorDescricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco_custo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco_custo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco_venda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco_venda)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="editar" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
    <!-- Botão para acionar modal Excluir-->
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalExcluir">
        EXCLLUIR
    </button>
</div>

<hr />

<div>
    <a asp-controller="Produto" asp-action="fornecedores" asp-route-produtoId="@Model.Id" class="btn btn-info btn-lg">FORNECEDOR</a>
</div>

<hr />

<div>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">ADICIONAR</button>

    <!-- Modal Adicionar novo fornecedor-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">ADICIONE AQUI UM NOVO FORNECEDOR PARA ESSE PRODUTO:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="CANCELAR">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Produto" asp-action="adicionarFornecedor" asp-route-produtoId="@Model.Id">
                        <h6>NOME DO FORNECEDOR: <input type="text" name="fornecedorDescricao" /></h6>
                        <input type="submit" value="ADICIONAR" class="btn-danger" />
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">CANCELAR</button>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<!-- Modal Excluir-->
<div class="modal fade" id="modalExcluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">EXCLUIR PRODUTO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir esse produto ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a asp-controller="Produto" asp-action="excluir" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
            </div>
        </div>
    </div>
</div>

<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>



