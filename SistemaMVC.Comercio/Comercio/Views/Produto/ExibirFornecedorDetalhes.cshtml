@model Comercio.Models.ObterFornecedorDetalhesViewModel
@{
    ViewData["Title"] = "produto/exibirFornecedorDetalhes";
}

<h1>@Model.Nome_empresa </h1>
<hr />

<!-- Botão para acionar modal ExcluirFornecedor-->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalExcluirFornecedor">EXCLUIR</button>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome_empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome_empresa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ENDEREÇO
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Endereco)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logradouro) ,
                        @Html.DisplayFor(modelItem => item.Numero) -
                        @Html.DisplayFor(modelItem => item.Cep) -
                        @Html.DisplayFor(modelItem => item.Cidade) -
                        @Html.DisplayFor(modelItem => item.UF)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    TELEFONE
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Telefone)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ddd)
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />

<div>
    <h4>VENDEDORES</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    NOME
                </th>
                <th>
                    EMAIL
                </th>
                <th>
                    TELEFONE 1
                </th>
                <th>
                    TELEFONE 2
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vendedor)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefones.First().Ddd)
                        @Html.DisplayFor(modelItem => item.Telefones.First().Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefones.Last().Ddd)
                        @Html.DisplayFor(modelItem => item.Telefones.Last().Numero)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />

<!-- Modal ExcluirFornecedor-->
<div class="modal fade" id="modalExcluirFornecedor" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">EXCLUIR FORNECEDOR</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir o fornecedor desse produto ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a asp-controller="Produto" asp-action="excluirFornecedor" asp-route-fornecedorId="@Model.Id" asp-route-produtoId="@Model.Produto_id" class="btn btn-danger">Excluir</a>
            </div>
        </div>
    </div>
</div>

<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>

