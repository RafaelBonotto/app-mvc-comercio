@model IEnumerable<Comercio.Models.Produto>

@{
    ViewData["Title"] = "Produtos/filtrar";
}

<h4 class="display-4">PRODUTOS</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Setor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco_venda)
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Setor.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco_venda)
                </td>
                <td>
                    <a asp-controller="Produto" asp-action="detalhes" asp-route-id="@item.Id" class="btn btn-success btn-sm">Detalhes</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<hr />
<div>
    <a href="" onClick="history.go(-1); return false;" class="btn btn-info btn-sm"> VOLTAR</a>
</div>

